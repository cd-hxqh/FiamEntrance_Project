<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/btn_top_5dp"
    android:background="@color/white"
    android:foreground="?android:selectableItemBackground"
    android:orientation="horizontal"
    card_view:cardCornerRadius="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/btn_top_5dp"
        android:layout_alignParentTop="true">

        <TextView
            android:id="@+id/wonum_text_id"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:gravity="center"
            android:background="@drawable/design_one_point"
            android:textColor="@color/white"
            android:text="2017CC00001"
            android:layout_centerVertical="true"
            />

        <LinearLayout
            android:layout_toRightOf="@+id/wonum_text_id"
            android:layout_marginLeft="@dimen/btn_top_5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/description_text_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/have_notdata_hint"
                android:text="A级车SUV+四驱平台"
                android:textSize="@dimen/dimens_18sp"
                />


            <TextView
                android:id="@+id/reportedby_text_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/btn_top_5dp"
                android:textColor="@color/light_black"
                android:hint="@string/have_notdata_hint"
                android:text="申请人:李阳"
                android:textSize="@dimen/dimens_18_sp"
                />

            <TextView
                android:id="@+id/fincntrldesc_text_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dimens_18sp"
                android:layout_marginTop="@dimen/btn_top_5dp"
                android:text="A级车SUV+四驱平台"
                android:hint="@string/have_notdata_hint"
                />


        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>